@model ecommerce_final.Models.LoginVM

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<main class="main">
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="signin-tab" data-toggle="tab" href="@Url.Action("Login", "Auth")" role="tab" aria-controls="signin" aria-selected="true">Sign In</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="signin" role="tabpanel" aria-labelledby="signin-tab">
                            <form asp-action="Login" method="post">
                                <input type="hidden" name="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />

                                @Html.AntiForgeryToken()

                                <!-- Email -->
                                <div class="form-group">
                                    <label for="UsernameOrEmail">Email Address or Username*</label>
                                    <input type="text" class="form-control" id="UsernameOrEmail" asp-for="UsernameOrEmail" name="UsernameOrEmail" required />
                                </div><!-- End .form-group -->
                                <!-- Password -->
                                <div class="form-group">
                                    <label for="Password">Password *</label>
                                    <input type="password" class="form-control" id="Password" asp-for="PasswordHash" name="PasswordHash" required />
                                </div><!-- End .form-group -->
                                <!-- Footer with actions -->
                                <div class="form-footer">
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>LOG IN</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>

                                    <!-- Remember Me -->
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="signin-remember">
                                        <label class="custom-control-label" for="signin-remember">Remember Me</label>
                                    </div><!-- End .custom-checkbox -->
                                    <!-- Forgot password -->
                                    <a href="@Url.Action("VerifyOtpForgotPassword", "Auth")" class="forgot-link">Forgot Your Password?</a>

                                    <!-- Register link -->
                                    <a href="@Url.Action("Register", "Auth")" class="login-link">Don't have an account? Register Here</a>
                                </div><!-- End .form-footer -->
                                <!-- Error message -->
                                @if (ViewBag.ThongBaoLoi != null)
                                {
                                    <p class="text-danger mt-2">@ViewBag.ThongBaoLoi</p>
                                }
                            </form>
                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main>


