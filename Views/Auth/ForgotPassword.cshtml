@model ecommerce_final.Models.ForgotPassword

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@{
    Layout = "_Layout";  // Sử dụng layout chung
}

<main class="main">
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="forgot-password-tab" data-toggle="tab" href="@Url.Action("ForgotPassword", "KhachHang")" role="tab" aria-controls="forgot-password" aria-selected="true">Forgot Password</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="forgot-password" role="tabpanel" aria-labelledby="forgot-password-tab">
                            <form asp-action="ForgotPassword" method="post">
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <label for="Email">Your email address *</label>
                                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter your registered email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-footer">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <span>RESET PASSWORD</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                </div>

                                <div class="text-center mt-3">
                                    <p>Remembered your password? <a href="@Url.Action("Login", "KhachHang")" class="login-link">Login Here</a></p>
                                </div>
                            </form>
                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main>
