@model ecommerce_final.Modelss.VerifyOtpRequest


@if (TempData["ErrorMessage"] != null)
{
    <p style="color:red">@TempData["ErrorMessage"]</p>
}

<main class="main">
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="otp-verify-tab" data-toggle="tab" href="@Url.Action("VerifyOtpRegister", "Auth")" role="tab" aria-controls="otp-verify" aria-selected="true">Verify OTP</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="otp-verify" role="tabpanel" aria-labelledby="otp-verify-tab">
                            <form method="post" asp-action="VerifyOtpRegister" asp-controller="Auth">
                                @Html.AntiForgeryToken()

                                <input type="hidden" name="email" value="@TempData["Email"]" />

                                <div class="form-group">
                                    <label for="otpCode">Enter OTP Code *</label>
                                    <input type="text" class="form-control" id="otpCode" asp-for="OtpCode" placeholder="Enter the OTP code sent to your email" required>
                                    <span class="text-danger" asp-validation-for="OtpCode"></span>
                                </div>
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <span>VERIFY OTP</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>

                                    <!-- Nút "Back to Login" sử dụng <a> để quay lại trang đăng nhập -->
                                    <a href="@Url.Action("Login", "Auth")" class="btn btn-primary btn-block">
                                        <span>Back to Login</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </a>
                                </div>

                            </form>
                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main>
