@model ecommerce_final.Entities.AttributeValue

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="AttributeName">Tên thuộc tính (ví dụ: Size)</label>
        <input type="text" class="form-control" id="AttributeName" name="Name" required />
    </div>

    <div class="form-group">
        <label for="AttributeDescription">Mô tả thuộc tính</label>
        <input type="text" class="form-control" id="AttributeDescription" name="Description" required />
    </div>

    <div class="form-group">
        <label for="AttributeValue">Giá trị thuộc tính (ví dụ: S, M, L)</label>
        <input type="text" class="form-control" name="Value" placeholder="Nhập giá trị" required />
    </div>

    <button type="submit" class="btn btn-primary">Tạo mới thuộc tính</button>
</form>
