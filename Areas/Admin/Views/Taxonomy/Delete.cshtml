@model ecommerce_final.Entities.Taxonomy

@{
    ViewData["Title"] = "Xóa mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Xóa danh mục</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-action="Index" asp-area="Admin" asp-controller="Home">
                <i class="fa-solid fa-house-user"></i>
            </a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a asp-action="Index" asp-area="Admin" asp-controller="Taxonomy">Quản lý danh mục</a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Xóa danh mục</a>
        </li>
    </ul>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Xóa thông tin danh mục</h4>
    </div>
    <div class="card-body">
        <h4>Bạn có chắc chắn muốn xóa mã giảm giá này?</h4>
        <dl class="row">
            <dt class="col-sm-2">
                Tên danh mục
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-2">
                Mô tả
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-2">
                Danh mục cha
            </dt>
            <dd class="col-sm-10">
                @Model.Parent?.Name ?? "Không có danh mục cha"
            </dd>

            <dt class="col-sm-2">
                Ngày tạo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
        </dl>

        <form asp-action="Delete" onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?');">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
        </form>
    </div>
</div>
