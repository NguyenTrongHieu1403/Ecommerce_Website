@model IEnumerable<ecommerce_final.Entities.Taxonomy>

@{
    ViewData["Title"] = "Taxonomy List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">H2TSHOP</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-action="Index" asp-area="Admin" asp-controller="Home">
                <i class="fa-solid fa-house-user"></i>
            </a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Quản lý hệ thống</a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Quản lý danh mục</a>
        </li>
    </ul>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Quản lý danh mục</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="basic-datatables" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th>Hành động</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model != null && Model.Any()) // Kiểm tra Model có dữ liệu không
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-action="Details" asp-controller="Taxonomy" asp-route-id="@item.Id">Xem</a>
                                        <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-action="Edit" asp-controller="Taxonomy" asp-route-id="@item.Id">Sửa</a>
                                        <a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-action="Delete" asp-controller="Taxonomy" asp-route-id="@item.Id">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4">Không có dữ liệu danh mục</td></tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#basic-datatables').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true
            });
        });
    </script>
}
