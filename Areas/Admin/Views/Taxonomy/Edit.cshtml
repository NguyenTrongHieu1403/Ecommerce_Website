@model ecommerce_final.Entities.Taxonomy

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Chỉnh sửa danh mục</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a asp-action="Index" asp-area="Admin" asp-controller="Home">
                <i class="fa-solid fa-house-user"></i>
            </a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a asp-action="Index" asp-area="Admin" asp-controller="Taxonomy">Quản lý danh mục</a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Chỉnh sửa danh mục</a>
        </li>
    </ul>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Thông tin danh mục</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                @* Kiểm tra xem tên đã tồn tại hay chưa *@
                @if (ViewBag.NameExists != null && (bool)ViewBag.NameExists)
                {
                    <span class="text-danger">Tên danh mục đã tồn tại, vui lòng chọn tên khác.</span>
                }
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParentId" class="control-label">Danh mục cha</label>
                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId">
                    <option value="">-- Chọn danh mục cha --</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>




            <div class="form-group text-right">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
            </div>
        </form>
    </div>
</div>
