@model ecommerce_final.Entities.User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <!-- User Information Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>User Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Username)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telephone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telephone)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Sex)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Sex)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BirthOfDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BirthOfDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Avatar)</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Url.Content(Model.Avatar)" alt="User Avatar" class="img-fluid" style="max-width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No avatar available</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <!-- Role Information Section -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h4>Role Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoleId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RoleId)</dd>

                <dt class="col-sm-3">Role Name</dt>
                <dd class="col-sm-9">@Model.Role?.RoleName</dd>
            </dl>
        </div>
    </div>

    <!-- Account Status Section -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h4>Account Status</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Active)</dt>
                <dd class="col-sm-9">@((Model.Active ?? false) ? "Active" : "Inactive")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EmailVerify)</dt>
                <dd class="col-sm-9">@((Model.EmailVerify ?? false) ? "Verified" : "Not Verified")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsDelete)</dt>
                <dd class="col-sm-9">@((Model.IsDelete ?? false) ? "Deleted" : "Not Deleted")</dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
