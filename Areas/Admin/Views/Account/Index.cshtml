<div class="card">
    <div class="card-header">
        <h4 class="card-title">Danh sách tài khoản</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="accountTable" class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Active</th>
                        <th>Create Date</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td>@item.Telephone</td>
                                <td>
                                    <span class="badge badge-@((item.Active.HasValue && item.Active.Value) ? "success" : "danger")">
                                        @(item.Active.HasValue && item.Active.Value ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@item.CreatedAt?.ToString("yyyy-MM-dd")</td>
                                <td>@item.Role?.RoleName</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-info" asp-area="Admin" asp-action="Details" asp-controller="Account" asp-route-id="@item.Id">Xem</a>
                                        <a class="btn btn-sm btn-warning" asp-area="Admin" asp-action="Edit" asp-controller="Account" asp-route-id="@item.Id">Sửa</a>
                                        <a class="btn btn-sm btn-danger" asp-area="Admin" asp-action="Delete" asp-controller="Account" asp-route-id="@item.Id">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#accountTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "language": {
                    "search": "Tìm kiếm:",
                    "lengthMenu": "Hiển thị _MENU_ mục",
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ mục",
                    "paginate": {
                        "previous": "Trước",
                        "next": "Tiếp"
                    }
                }
            });
        });
    </script>
}
