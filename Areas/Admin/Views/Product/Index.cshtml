@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ecommerce_final.Entities.Product>

@{
    var firstBook = Model.FirstOrDefault();
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách Sản phẩm - Trang " + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header mb-4">
    <h3 class="fw-bold">H2TSHOP - Quản lý sản phẩm</h3>
    <ul class="breadcrumbs">
        <li class="nav-home">
            <a asp-action="Index" asp-area="Admin" asp-controller="Home">
                <i class="fa-solid fa-house-user"></i>
            </a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Quản lý hệ thống</a>
        </li>
        <li class="separator">
            <i class="fa-solid fa-angle-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Quản lý sản phẩm</a>
        </li>
    </ul>
</div>

<div class="row mb-4">
    <div class="col-lg-6">
        <div class="d-flex">
            <div class="mr-3">
                <select class="custom-select" id="idtaxonomy" name="idtaxonomy" asp-items="ViewBag.DanhMuc">
                    <option selected>Chọn thể loại</option>
                    <option value="0">All</option>
                </select>
            </div>
            <div>
                <select class="custom-select" id="idattribute" name="idattribute" asp-items="ViewBag.ThuocTinh">
                    <option selected>Chọn thuộc tính</option>
                    <option value="0">All</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-6 text-right">
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Danh sách sách</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="bookTable" class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Mô tả</th>
                        <th>Tóm tắt</th>
                        <th>Số lượng</th>
                        <th>Hình ảnh</th>
                        <th>Giá</th>
                        <th>Thể loại</th>
                        <th>Giảm giá</th>
                        <th>Thuộc tính</th>
                        <th>Actions</th>
                    </tr>
                </thead>
           <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-truncate" style="max-width: 150px;">@item.Description</td>
                        <td class="text-truncate" style="max-width: 150px;">@item.Summary</td>
                        <td>@item.Quantity</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Img))
                            {
                                <img src="@item.Img" alt="@item.Name" style="width: 50px; height: auto;" />
                            }
                        </td>
                        <td>@(item.Price.ToString("#,##0") ?? "N/A")</td>
                        <td>@item.Taxonomy?.Name</td>
                        <td>@item.Discount?.Name</td>
                        <td>
                            @foreach (var attr in item.ProductAttributes)
                            {
                                <span class="badge badge-info">@attr.AttributeValue?.Value</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-warning" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            </tbody>

            </table>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#bookTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "language": {
                    "search": "Tìm kiếm:",
                    "lengthMenu": "Hiển thị _MENU_ mục",
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ mục",
                    "paginate": {
                        "previous": "Trước",
                        "next": "Tiếp"
                    }
                }
            });

            // Handle filtering
            $('#idtaxonomy, #idattribute').change(function () {
                var taxonomyId = $('#idtaxonomy').val(); 
                var attributeId = $('#idattribute').val(); 

                $.ajax({
                    url: '@Url.Action("Filter", "Product")',
                    data: { idtaxonomy: taxonomyId, idattribute: attributeId }, 
                    success: function (result) {
                        $('.card-body').html(result);
                    }
                });
            });
        });
    </script>
}

