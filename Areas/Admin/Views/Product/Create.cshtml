@model ProductDTO

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create New Product</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Summary" class="control-label"></label>
        <textarea asp-for="Summary" class="form-control"></textarea>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaxonomyId" class="control-label"></label>
        <select asp-for="TaxonomyId" class="form-control" asp-items="ViewBag.DanhMuc"></select>
        <span asp-validation-for="TaxonomyId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountId" class="control-label"></label>
        <select asp-for="DiscountId" class="form-control" asp-items="ViewBag.Discount"></select>
        <span asp-validation-for="DiscountId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Img" class="control-label">Upload Image</label>
        <input asp-for="Img" name="ImageFile" class="form-control" type="file" />
        <span asp-validation-for="Img" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label class="control-label">Thuộc tính sản phẩm</label>
        <div>
            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.ThuocTinh)
            {
                <div class="form-check">
                    <input type="checkbox" name="AttributeValueIds" value="@item.Value" class="form-check-input" id="attribute-@item.Value" />
                    <label class="form-check-label" for="attribute-@item.Value">@item.Text</label>
                </div>
            }
        </div>
        <span asp-validation-for="AttributeValueIds" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Create Product</button>
</form>
