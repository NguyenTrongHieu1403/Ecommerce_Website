@model ecommerce_final.Entities.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <!-- Product Information Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>Product Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Summary)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Summary)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Img)</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Img))
                    {
                        <img src="@Url.Content(Model.Img)" alt="Product Image" class="img-fluid" style="max-width: 300px; height: auto;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsSoldOut)</dt>
                <dd class="col-sm-9">@((Model.IsSoldOut ?? false) ? "Yes" : "No")</dd>
            </dl>
        </div>
    </div>

    <!-- Taxonomy Section -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h4>Taxonomy</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Taxonomy)</dt>
                <dd class="col-sm-9">
                    @if (Model.Taxonomy != null)
                    {
                        @Html.DisplayFor(model => model.Taxonomy.Name)
                    }
                    else
                    {
                        <span>No taxonomy assigned</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <!-- Discount Section -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h4>Discount</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Discount)</dt>
                <dd class="col-sm-9">
                    @if (Model.Discount != null)
                    {
                        @Html.DisplayFor(model => model.Discount.DiscountPercent)
                            }
                    else
                    {
                        <span>No discount available</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <!-- Product Attributes Section -->
    <div class="card mb-4">
        <div class="card-header bg-warning text-white">
            <h4>Product Attributes</h4>
        </div>
        <div class="card-body">
            @if (Model.ProductAttributes != null && Model.ProductAttributes.Any())
            {
                <ul class="list-group">
                    @foreach (var attr in Model.ProductAttributes)
                    {
                        <li class="list-group-item">
                            <strong>@attr.AttributeValue?.Value</strong>
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>No attributes available</span>
            }
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
